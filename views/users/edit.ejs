<h1>Sửa người dùng</h1>

<form action="/users/edit?id=<%= user.id %>" method="post">
    <div class="mb-3">
        <label for="">Tên</label>
        <input type="text" name="name" class="form-control" placeholder="Tên..." value="<%= user.name %>" />
        <span class="text-danger"><%= req.errors.name %></span>
    </div>

    <div class="mb-3">
        <label for="">Email</label>
        <input
            type="text"
            name="email"
            class="form-control"
            placeholder="Email..."
            value="<%= user.email %>" 
        />
        <span class="text-danger"><%= req.errors.email %></span>
    </div>

    <div class="mb-3">
        <label for="">Trạng thái</label>
        <select name="status" class="form-select">
            <option value="0" <%= user.status === false ? 'selected' : '' %>>Chưa kích hoạt</option>
            <option value="1" <%= user.status === true ? 'selected' : '' %>>Kích hoạt</option>
        </select>
        <span class="text-danger"><%= req.errors.status %></span>
    </div>

    <button class="btn btn-primary">Sửa</button>
    <a href="/users" class="btn btn-danger">Hủy</a>
</form>